{
  "name": "@sabinmarcu/website",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@sabinmarcu/moving-mesh-background": "workspace:*",
    "@sabinmarcu/theme": "workspace:*",
    "@vanilla-extract/css": "^1.17.1",
    "@vanilla-extract/next-plugin": "^2.4.10",
    "@vanilla-extract/recipes": "^0.5.5",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@sabinmarcu/types": "workspace:*",
    "@sabinmarcu/utils-test": "workspace:*",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "typescript": "^5"
  },
  "tscmono": {
    "preset": "nextApp"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./theme": "./config/theme.ts",
    "./src/*": {
      "import": "./src/*",
      "default": "./src/*"
    },
    "./*": {
      "import": "./dist/*.js",
      "default": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "typeVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  }
}
