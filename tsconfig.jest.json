{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
  },
  "include": [
    "apps/*/src",
    "workspaces/*/*/src",
    "./*.js",
    "./.config/**/*"
  ]
}